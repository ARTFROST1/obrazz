<% content_for :title, "Subscriptions" %>

<% content_for :header do %>
  <div class="sm:flex sm:items-center sm:justify-between">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Subscriptions</h1>
  </div>
<% end %>

<div class="px-4 sm:px-0">
  <!-- Stats -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-4 mb-6">
    <div class="bg-white overflow-hidden shadow rounded-lg px-4 py-5">
      <dt class="text-sm font-medium text-gray-500 truncate">Total</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:total] %></dd>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg px-4 py-5">
      <dt class="text-sm font-medium text-gray-500 truncate">Active</dt>
      <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @stats[:active] %></dd>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg px-4 py-5">
      <dt class="text-sm font-medium text-gray-500 truncate">Cancelled</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-600"><%= @stats[:cancelled] %></dd>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg px-4 py-5">
      <dt class="text-sm font-medium text-gray-500 truncate">By Plan</dt>
      <dd class="mt-1 text-sm text-gray-600">
        <% @stats[:by_plan].each do |plan, count| %>
          <span class="inline-flex items-center mr-2"><%= plan.titleize %>: <span class="font-semibold ml-1"><%= count %></span></span>
        <% end %>
      </dd>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg mb-6 p-4">
    <%= form_with url: admin_subscriptions_path, method: :get, class: "flex flex-col sm:flex-row gap-4" do %>
      <div>
        <select name="plan" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm">
          <option value="">All plans</option>
          <option value="free" <%= 'selected' if params[:plan] == 'free' %>>Free</option>
          <option value="pro_monthly" <%= 'selected' if params[:plan] == 'pro_monthly' %>>Pro Monthly</option>
          <option value="pro_yearly" <%= 'selected' if params[:plan] == 'pro_yearly' %>>Pro Yearly</option>
        </select>
      </div>
      <div>
        <select name="status" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm">
          <option value="">All statuses</option>
          <option value="active" <%= 'selected' if params[:status] == 'active' %>>Active</option>
          <option value="cancelled" <%= 'selected' if params[:status] == 'cancelled' %>>Cancelled</option>
          <option value="past_due" <%= 'selected' if params[:status] == 'past_due' %>>Past Due</option>
        </select>
      </div>
      <div>
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-600 hover:bg-brand-700">
          Filter
        </button>
        <% if params[:plan].present? || params[:status].present? %>
          <a href="<%= admin_subscriptions_path %>" class="ml-2 text-sm text-gray-500 hover:text-gray-700">Clear</a>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">User</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Plan</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Monthly Tokens</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Renews</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @subscriptions.each do |sub| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <a href="<%= admin_user_path(sub.user) %>" class="text-sm font-medium text-brand-600 hover:text-brand-900">
                <%= sub.user.email %>
              </a>
            </td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                <%= case sub.plan 
                    when 'free' then 'bg-gray-100 text-gray-800'
                    when 'pro_monthly' then 'bg-purple-100 text-purple-800'
                    when 'pro_yearly' then 'bg-purple-100 text-purple-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= sub.plan.titleize %>
              </span>
            </td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= sub.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= sub.status %>
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900">
              <%= sub.monthly_tokens %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              <%= sub.current_period_end ? sub.current_period_end.strftime('%b %d, %Y') : 'â€”' %>
            </td>
            <td class="px-6 py-4 text-right">
              <a href="<%= admin_subscription_path(sub) %>" class="text-brand-600 hover:text-brand-900 text-sm font-medium">View</a>
              <a href="<%= edit_admin_subscription_path(sub) %>" class="ml-3 text-gray-600 hover:text-gray-900 text-sm font-medium">Edit</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @subscriptions.empty? %>
      <div class="text-center py-12">
        <p class="text-sm text-gray-500">No subscriptions found</p>
      </div>
    <% end %>
  </div>
</div>
