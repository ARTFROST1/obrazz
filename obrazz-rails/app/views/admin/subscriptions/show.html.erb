<% content_for :title, "Subscription ##{@subscription.id}" %>

<% content_for :header do %>
  <div class="sm:flex sm:items-center sm:justify-between">
    <div class="flex items-center">
      <a href="<%= admin_subscriptions_path %>" class="mr-4 text-gray-400 hover:text-gray-600">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
      </a>
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Subscription Details</h1>
        <p class="text-sm text-gray-500"><%= @subscription.user.email %></p>
      </div>
    </div>
    <a href="<%= edit_admin_subscription_path(@subscription) %>" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-600 hover:bg-brand-700">
      Edit Subscription
    </a>
  </div>
<% end %>

<div class="px-4 sm:px-0">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Subscription Information</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">User</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <a href="<%= admin_user_path(@subscription.user) %>" class="text-brand-600 hover:text-brand-900">
              <%= @subscription.user.email %>
            </a>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Plan</dt>
          <dd class="mt-1 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
              <%= case @subscription.plan 
                  when 'free' then 'bg-gray-100 text-gray-800'
                  when 'pro_monthly' then 'bg-purple-100 text-purple-800'
                  when 'pro_yearly' then 'bg-purple-100 text-purple-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @subscription.plan.titleize %>
            </span>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @subscription.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @subscription.status %>
            </span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Monthly Tokens</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @subscription.monthly_tokens %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Current Period Ends</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @subscription.current_period_end ? @subscription.current_period_end.strftime('%B %d, %Y at %H:%M') : '—' %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @subscription.created_at.strftime('%B %d, %Y at %H:%M') %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">External ID</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-mono text-xs"><%= @subscription.external_id || '—' %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Recent Payments -->
  <div class="mt-8">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Related Payments</h3>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <% if @payments.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Amount</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @payments.each do |payment| %>
              <tr>
                <td class="px-6 py-4 text-sm text-gray-500"><%= payment.created_at.strftime('%b %d, %Y') %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= payment.payment_type %></td>
                <td class="px-6 py-4">
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= payment.status == 'succeeded' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= payment.status %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-right font-medium"><%= number_to_currency(payment.amount, unit: '₽', precision: 0, format: '%n%u') %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="text-center py-12">
          <p class="text-sm text-gray-500">No payments found</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
