<% content_for :title, "Generation Details" %>

<% content_for :header do %>
  <div class="flex items-center">
    <a href="<%= admin_ai_generations_path %>" class="mr-4 text-gray-400 hover:text-gray-600">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    </a>
    <div>
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Generation Details</h1>
      <p class="text-sm text-gray-500"><%= @generation.created_at.strftime('%B %d, %Y at %H:%M') %></p>
    </div>
  </div>
<% end %>

<div class="px-4 sm:px-0">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Output Image -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-3 bg-gray-50 border-b">
        <h3 class="text-sm font-medium text-gray-900">Output Image</h3>
      </div>
      <div class="p-4">
        <% if @generation.primary_output_url.present? %>
          <img src="<%= @generation.primary_output_url %>" alt="Generated image" class="w-full rounded-lg">
        <% else %>
          <div class="aspect-square bg-gray-100 rounded-lg flex items-center justify-center">
            <% if @generation.status == 'processing' %>
              <div class="text-center">
                <svg class="animate-spin h-12 w-12 mx-auto text-brand-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500">Processing...</p>
              </div>
            <% elsif @generation.status == 'failed' %>
              <div class="text-center">
                <svg class="h-12 w-12 mx-auto text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <p class="mt-2 text-sm text-red-500">Generation failed</p>
              </div>
            <% else %>
              <div class="text-center text-gray-400">
                <svg class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="mt-2 text-sm">No output yet</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Details -->
    <div class="space-y-6">
      <!-- Info Card -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-4 py-3 bg-gray-50 border-b flex items-center justify-between">
          <h3 class="text-sm font-medium text-gray-900">Generation Info</h3>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
            <%= case @generation.status
                when 'completed' then 'bg-green-100 text-green-800'
                when 'processing' then 'bg-yellow-100 text-yellow-800'
                when 'failed' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
            <%= @generation.status %>
          </span>
        </div>
        <dl class="divide-y divide-gray-200">
          <div class="px-4 py-3 flex justify-between">
            <dt class="text-sm text-gray-500">Type</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @generation.generation_type.titleize %></dd>
          </div>
          <div class="px-4 py-3 flex justify-between">
            <dt class="text-sm text-gray-500">User</dt>
            <dd class="text-sm font-medium">
              <a href="<%= admin_user_path(@generation.user) %>" class="text-brand-600 hover:text-brand-900">
                <%= @generation.user.email %>
              </a>
            </dd>
          </div>
          <div class="px-4 py-3 flex justify-between">
            <dt class="text-sm text-gray-500">Tokens Used</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @generation.tokens_cost %></dd>
          </div>
          <% if @generation.processing_time_ms.present? %>
            <div class="px-4 py-3 flex justify-between">
              <dt class="text-sm text-gray-500">Processing Time</dt>
              <dd class="text-sm font-medium text-gray-900"><%= (@generation.processing_time_ms.to_f / 1000).round(2) %>s</dd>
            </div>
          <% end %>
          <div class="px-4 py-3 flex justify-between">
            <dt class="text-sm text-gray-500">Created</dt>
            <dd class="text-sm font-medium text-gray-900"><%= @generation.created_at.strftime('%b %d, %Y %H:%M') %></dd>
          </div>
        </dl>
      </div>

      <!-- Input Images -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-4 py-3 bg-gray-50 border-b">
          <h3 class="text-sm font-medium text-gray-900">Input Images</h3>
        </div>
        <div class="p-4 grid grid-cols-2 gap-4">
          <% input_urls = Array(@generation.input_image_urls).compact %>
          <% if input_urls.any? %>
            <% input_urls.first(2).each_with_index do |url, idx| %>
              <div>
                <p class="text-xs text-gray-500 mb-1">Input <%= idx + 1 %></p>
                <img src="<%= url %>" alt="Input image <%= idx + 1 %>" class="w-full rounded-lg">
              </div>
            <% end %>
          <% else %>
            <div class="col-span-2 text-center py-8 text-gray-400 text-sm">
              No input images available
            </div>
          <% end %>
        </div>
      </div>

      <!-- Error Details (if failed) -->
      <% if @generation.status == 'failed' && @generation.error_message.present? %>
        <div class="bg-red-50 shadow rounded-lg overflow-hidden">
          <div class="px-4 py-3 bg-red-100 border-b border-red-200">
            <h3 class="text-sm font-medium text-red-800">Error Details</h3>
          </div>
          <div class="p-4">
            <p class="text-sm text-red-700"><%= @generation.error_message %></p>
          </div>
        </div>
      <% end %>

      <!-- External IDs -->
      <% if @generation.external_id.present? %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-4 py-3 bg-gray-50 border-b">
            <h3 class="text-sm font-medium text-gray-900">Technical Details</h3>
          </div>
          <div class="p-4">
            <p class="text-xs text-gray-500 mb-1">External ID</p>
            <p class="text-sm font-mono text-gray-900 break-all"><%= @generation.external_id %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
