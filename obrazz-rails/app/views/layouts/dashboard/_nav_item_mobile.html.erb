<%# Mobile Navigation Item Partial %>
<% 
  is_active = current_page?(path)
  active_class = is_active ? 'bg-white/10 text-white' : 'text-white/60 hover:text-white hover:bg-white/5'
%>

<li>
  <%= link_to path, class: "group flex gap-x-3 rounded-xl p-3 text-sm leading-6 font-medium transition-colors #{active_class}" do %>
    <%= render "layouts/dashboard/icons/#{icon}", active: is_active %>
    <%= label %>
  <% end %>
</li>
