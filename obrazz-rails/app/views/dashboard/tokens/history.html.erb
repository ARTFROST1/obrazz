<% content_for(:title) { 'История токенов - Obrazz' } %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center">
    <%= link_to dashboard_tokens_path, class: "mr-4 text-gray-400 hover:text-gray-500" do %>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        История транзакций
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        Полная история операций с токенами
      </p>
    </div>
  </div>
</div>

<!-- Transactions List -->
<div class="bg-white shadow rounded-xl overflow-hidden">
  <% if @transactions.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Дата
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Операция
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Источник
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Детали
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Сумма
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Баланс
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @transactions.each do |transaction| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= transaction.created_at.strftime('%d.%m.%Y %H:%M') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% label_key = transaction.reason.presence || transaction.operation %>
                <% case label_key %>
                <% when 'ai_generation', 'debit' %>
                  <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                    Списание
                  </span>
                <% when 'purchase', 'credit' %>
                  <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                    <%= label_key == 'purchase' ? 'Покупка' : 'Начисление' %>
                  </span>
                <% when 'refund' %>
                  <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                    Возврат
                  </span>
                <% when 'subscription_renewal' %>
                  <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800">
                    Подписка
                  </span>
                <% when 'expiration', 'expire' %>
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                    Сгорание
                  </span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                    <%= label_key.to_s.humanize %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% case transaction.token_balance&.token_type %>
                <% when 'subscription_tokens' %>
                  Подписка
                <% when 'purchased_tokens' %>
                  Покупка
                <% when 'bonus_tokens' %>
                  Бонус
                <% else %>
                  <%= transaction.token_balance&.token_type&.humanize || '—' %>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <% if transaction.ai_generation %>
                  <div class="flex items-center">
                    <% if transaction.ai_generation.primary_output_url.present? %>
                      <img src="<%= transaction.ai_generation.primary_output_url %>" 
                           alt="" 
                           class="h-8 w-8 rounded object-cover mr-3">
                    <% end %>
                    <%= link_to dashboard_generation_path(transaction.ai_generation), class: "text-purple-600 hover:text-purple-500" do %>
                      <% case transaction.ai_generation.generation_type %>
                      <% when 'virtual_try_on' %>
                        Virtual Try-On
                      <% when 'fashion_model' %>
                        Fashion Model
                      <% when 'variation' %>
                        Вариация
                      <% else %>
                        AI-генерация
                      <% end %>
                    <% end %>
                  </div>
                <% elsif transaction.description.present? %>
                  <%= transaction.description %>
                <% else %>
                  —
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium">
                <% if transaction.amount > 0 %>
                  <span class="text-green-600">+<%= transaction.amount %></span>
                <% else %>
                  <span class="text-red-600"><%= transaction.amount %></span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-500">
                <%= transaction.balance_after || '—' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Pagination -->
    <% if @transactions.respond_to?(:total_pages) && @transactions.total_pages > 1 %>
      <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
        <div class="flex-1 flex justify-between sm:hidden">
          <% if @transactions.prev_page %>
            <%= link_to 'Назад', history_dashboard_tokens_path(page: @transactions.prev_page), 
                class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
          <% if @transactions.next_page %>
            <%= link_to 'Вперёд', history_dashboard_tokens_path(page: @transactions.next_page), 
                class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
        </div>
        
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-gray-700">
              Страница <span class="font-medium"><%= @transactions.current_page %></span>
              из <span class="font-medium"><%= @transactions.total_pages %></span>
            </p>
          </div>
          <div>
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <% if @transactions.prev_page %>
                <%= link_to history_dashboard_tokens_path(page: @transactions.prev_page), 
                    class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
              
              <% if @transactions.next_page %>
                <%= link_to history_dashboard_tokens_path(page: @transactions.next_page), 
                    class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">Нет транзакций</h3>
      <p class="mt-1 text-sm text-gray-500">История операций пуста</p>
    </div>
  <% end %>
</div>
