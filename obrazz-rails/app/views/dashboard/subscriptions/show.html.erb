<script>
  // Simple billing toggle without Stimulus (fallback)
  document.addEventListener('DOMContentLoaded', function() {
    const switchBtn = document.querySelector('[data-action="click->billing-toggle#toggle"]');
    const knob = document.querySelector('[data-billing-toggle-target="knob"]');
    const monthlyLabel = document.querySelector('[data-billing-toggle-target="monthlyLabel"]');
    const yearlyLabel = document.querySelector('[data-billing-toggle-target="yearlyLabel"]');
    const proPrice = document.querySelector('[data-billing-toggle-target="proPrice"]');
    const proSubtext = document.querySelector('[data-billing-toggle-target="proSubtext"]');
    const proButton = document.querySelector('[data-billing-toggle-target="proButton"]');
    
    let isYearly = true;
    
    if (switchBtn) {
      switchBtn.addEventListener('click', function() {
        isYearly = !isYearly;
        
        // Toggle knob position
        if (isYearly) {
          knob.style.transform = 'translateX(0)';
          knob.classList.remove('left-0.5');
          knob.classList.add('right-0.5');
        } else {
          knob.style.transform = 'translateX(-26px)';
        }
        
        // Update labels
        monthlyLabel.classList.toggle('text-[#1A1A2E]', !isYearly);
        monthlyLabel.classList.toggle('text-[#999999]', isYearly);
        yearlyLabel.classList.toggle('text-[#1A1A2E]', isYearly);
        yearlyLabel.classList.toggle('text-[#999999]', !isYearly);
        
        // Update prices
        if (isYearly) {
          proPrice.textContent = '332₽';
          proSubtext.innerHTML = '3 990₽/год · <span class="text-[#34C759]">-17%</span>';
          
          // Update form action for yearly plan
          if (proButton && proButton.parentElement.tagName === 'FORM') {
            proButton.parentElement.action = proButton.parentElement.action.replace('plan=pro_monthly', 'plan=pro_yearly');
          }
        } else {
          proPrice.textContent = '399₽';
          proSubtext.textContent = 'или 332₽/мес при оплате за год';
          
          // Update form action for monthly plan
          if (proButton && proButton.parentElement.tagName === 'FORM') {
            proButton.parentElement.action = proButton.parentElement.action.replace('plan=pro_yearly', 'plan=pro_monthly');
          }
        }
      });
    }
