<% content_for(:title) { 'Регистрация - Obrazz' } %>

<div class="space-y-6">
  <!-- Email/Password Registration -->
  <%= form_with url: signup_path, method: :post, class: "space-y-4", data: { turbo: false } do |f| %>
    <!-- Username Input -->
    <div>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
          <svg class="h-5 w-5 text-[#999999]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>
        </div>
        <%= f.text_field :username, 
            id: "username",
            autocomplete: "username",
            placeholder: "Username",
            class: "block w-full rounded-xl border-0 bg-[#F5F5F5] py-4 pl-12 pr-4 text-[#000000] placeholder:text-[#999999] focus:ring-2 focus:ring-[#1A1A2E] text-base" %>
      </div>
    </div>

    <!-- Email Input -->
    <div>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
          <svg class="h-5 w-5 text-[#999999]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
        </div>
        <%= f.email_field :email, 
            id: "email",
            autocomplete: "email",
            required: true,
            placeholder: "Email",
            class: "block w-full rounded-xl border-0 bg-[#F5F5F5] py-4 pl-12 pr-4 text-[#000000] placeholder:text-[#999999] focus:ring-2 focus:ring-[#1A1A2E] text-base" %>
      </div>
    </div>

    <!-- Password Input -->
    <div>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
          <svg class="h-5 w-5 text-[#999999]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
        </div>
        <%= f.password_field :password,
            id: "password",
            autocomplete: "new-password",
            required: true,
            placeholder: "Password",
            minlength: 6,
            class: "block w-full rounded-xl border-0 bg-[#F5F5F5] py-4 pl-12 pr-12 text-[#000000] placeholder:text-[#999999] focus:ring-2 focus:ring-[#1A1A2E] text-base" %>
        <button type="button" 
                onclick="togglePassword('password', 'eye-icon-1')" 
                class="absolute inset-y-0 right-0 flex items-center pr-4 text-[#999999] hover:text-[#666666]">
          <svg id="eye-icon-1" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Confirm Password Input -->
    <div>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
          <svg class="h-5 w-5 text-[#999999]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
        </div>
        <%= f.password_field :password_confirmation,
            id: "password_confirmation",
            autocomplete: "new-password",
            required: true,
            placeholder: "Confirm Password",
            minlength: 6,
            class: "block w-full rounded-xl border-0 bg-[#F5F5F5] py-4 pl-12 pr-12 text-[#000000] placeholder:text-[#999999] focus:ring-2 focus:ring-[#1A1A2E] text-base" %>
        <button type="button" 
                onclick="togglePassword('password_confirmation', 'eye-icon-2')" 
                class="absolute inset-y-0 right-0 flex items-center pr-4 text-[#999999] hover:text-[#666666]">
          <svg id="eye-icon-2" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Sign Up Button -->
    <div class="pt-2">
      <%= f.submit "SIGN UP", 
          class: "flex w-full justify-center rounded-full bg-[#1A1A2E] py-4 text-sm font-semibold tracking-wider text-white shadow-sm hover:opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#1A1A2E] transition-opacity cursor-pointer" %>
    </div>
  <% end %>

  <!-- Login Link -->
  <div class="text-center pt-2">
    <span class="text-sm text-[#666666]">Already Have Account? </span>
    <a href="<%= login_path %>" class="text-sm font-semibold text-[#1A1A2E] hover:opacity-80 transition-opacity">
      Sign In
    </a>
  </div>

  <!-- Divider -->
  <div class="relative py-4">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-[#E5E5E5]"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="bg-white px-4 text-[#999999]">Or Continue with</span>
    </div>
  </div>

  <!-- Social Buttons -->
  <div class="flex justify-center space-x-4">
    <%= link_to auth_google_path, method: :post, class: "flex h-14 w-14 items-center justify-center rounded-full bg-[#F5F5F5] hover:bg-[#EBEBEB] transition-colors", data: { turbo: false } do %>
      <svg class="h-5 w-5 text-[#000000]" viewBox="0 0 24 24" fill="currentColor">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
      </svg>
    <% end %>
    <%= link_to auth_apple_path, method: :post, class: "flex h-14 w-14 items-center justify-center rounded-full bg-[#F5F5F5] hover:bg-[#EBEBEB] transition-colors", data: { turbo: false } do %>
      <svg class="h-5 w-5 text-[#000000]" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
      </svg>
    <% end %>
  </div>

  <!-- Terms Notice -->
  <div class="mt-6 text-center">
    <p class="text-xs text-[#999999]">
      Регистрируясь, вы соглашаетесь с 
      <a href="#" class="text-[#1A1A2E] hover:underline">Условиями использования</a> 
      и 
      <a href="#" class="text-[#1A1A2E] hover:underline">Политикой конфиденциальности</a>
    </p>
  </div>
</div>

<script>
  function togglePassword(inputId, iconId) {
    const passwordInput = document.getElementById(inputId);
    const eyeIcon = document.getElementById(iconId);
    
    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
      eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />';
    } else {
      passwordInput.type = 'password';
      eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />';
    }
  }
</script>
